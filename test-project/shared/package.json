{
  "name": "@sanjo/test-project-shared",
  "type": "module",
  "scripts": {
    "build": "npm run build:proto && tsc --project tsconfig-build.json",
    "build:proto": "protoc --ts_opt generate_dependencies --ts_opt use_proto_field_name --ts_out src/protos --proto_path src/protos --proto_path ../../node_modules/@sanjo/game-engine/src/protos src/protos/*.proto",
    "build:watch": "run-p --print-label build:watch:**",
    "build:watch:proto": "chokidar \"src/protos/*.proto\" \"../../node_modules/@sanjo/game-engine/src/protos/*.proto\" -c \"npm run build:proto\"",
    "build:watch:typescript": "tsc --project tsconfig-build.json --watch --preserveWatchOutput"
  },
  "exports": {
    "./package.json": "./package.json",
    "./*.js": {
      "types": "./build/*.d.ts",
      "default": "./build/*.js"
    }
  },
  "devDependencies": {
    "@protobuf-ts/plugin": "^2.9.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
