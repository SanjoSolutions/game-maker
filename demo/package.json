{
  "type": "commonjs",
  "version": "0.0.0",
  "main": "public/server.js",
  "scripts": {
    "dev": "esbuild src/main.mts --bundle --watch --outdir=public --servedir=public --target=chrome116 --format=esm --define:window.IS_DEVELOPMENT=true --sourcemap",
    "build": "esbuild src/main.mts --bundle --outdir=public --target=chrome116 --format=esm --define:window.IS_DEVELOPMENT=false",
    "serve": "cd public && python3 -m http.server",
    "test": "jest",
    "electron-start": "electron-forge start",
    "electron-package": "electron-forge package",
    "electron-make": "electron-forge make",
    "electron-publish": "electron-forge publish"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "@sanjo/game-engine": "file:../@sanjo/game-engine",
    "@sanjo/tilemap-editor": "file:../@sanjo/tilemap-editor"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.1",
    "@electron-forge/maker-deb": "^6.4.1",
    "@electron-forge/maker-rpm": "^6.4.1",
    "@electron-forge/maker-squirrel": "^6.4.1",
    "@electron-forge/maker-zip": "^6.4.1",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.1",
    "electron": "26.1.0",
    "esbuild": "^0.19.2",
    "jest": "^29.6.4",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "typescript": "^5.2.2"
  }
}
