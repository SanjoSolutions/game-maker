{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "@sanjo/game-engine/tsconfig-build.json",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "option": "watch",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      },
      "problemMatcher": ["$tsc-watch"],
      "label": "tsc: build - @sanjo/game-engine/tsconfig-build.json"
    }
  ]
}
